  "scripts": {
    "start": "node -r ts-node/register server/index.ts | pino-pretty",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --fix && prettier \"{server, test}/**/*.{js,ts,tsx,json,md}\" --write",
