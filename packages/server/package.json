    "@types/pino": "^6.3.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.16.2",
    "mongoose": "^5.9.20",
    "pino": "^6.3.2",
    "pino-pretty": "^4.0.0",
    "uuidv4": "^6.1.1",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
